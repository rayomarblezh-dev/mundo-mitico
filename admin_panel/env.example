# Configuración del Panel de Administración
# Copia este archivo como .env y configura tus valores

# IDs de administradores (IDs de Telegram, separados por comas)
ADMIN_IDS=7828962018

# Clave secreta para sesiones (genera una clave segura)
ADMIN_SECRET_KEY=your-secret-key-change-this-in-production

# Configuración del servidor
FLASK_HOST=0.0.0.0
# FLASK_PORT no es necesario en Railway (usa variable PORT automáticamente)
FLASK_DEBUG=False

# Configuración de MongoDB
MONGO_URI=mongodb://localhost:27017
DATABASE_NAME=mundo_mitico

# Configuración de CORS (opcional)
CORS_ORIGINS=*

# URL del panel (para despliegue)
# En Railway, esta variable se configura automáticamente con RAILWAY_PUBLIC_DOMAIN
# Solo configúrala si usas un dominio personalizado
PANEL_URL=https://tu-dominio-personalizado.com 